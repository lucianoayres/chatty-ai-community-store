{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["version", "total_agents", "files"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+$"
    },
    "total_agents": {
      "type": "integer",
      "minimum": 0,
      "description": "Total number of agent files in the index"
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "filename", "description", "emoji", "created_at"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z_]+$"
          },
          "name": {
            "type": "string",
            "minLength": 1
          },
          "filename": {
            "type": "string",
            "pattern": "^[a-z_]+\\.yaml$"
          },
          "description": {
            "type": "string",
            "minLength": 1
          },
          "emoji": {
            "type": "string",
            "minLength": 1
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp of when the agent was added to the index"
          },
          "author": {
            "type": "string",
            "minLength": 1,
            "maxLength": 40,
            "description": "Optional: Name of the agent's author"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
